<div class="my-3">
  <canvas id="bar_chart"></canvas>
</div>

<script>
  var ctx = document.getElementById("bar_chart").getContext("2d");

  var jsonDataStr = `<%- JSON.stringify(lista, null, 2).replace(/"/g, '\\"') %>`;
  var jsonData = JSON.parse(jsonDataStr);

  var dataLabels, dataLbl1, chartData1, dataLbl2, chartData2, dataLbl3, chartData3, dataLbl4, chartData4;
  
  if (jsonData.report == "PromMaxMinXRegionXSexo") {
    
    dataLabels = jsonData.year.map((year, index) => `${year} - ${jsonData.region[index]} - ${jsonData.sex[index]}`);

    dataLbl2 = "Min";
    chartData2 = jsonData.min;

    dataLbl3 = "Max";
    chartData3 = jsonData.max;

    dataLbl4 = "Average";
    chartData4 = jsonData.average;
  }
  else if (jsonData.report == "PromMaxMinXRegionXSexoDec") {
    dataLabels = jsonData.decade.map((decade, index) => `${decade} - ${jsonData.region[index]} - ${jsonData.sex[index]}`);

    dataLbl2 = "Min";
    chartData2 = jsonData.min;

    dataLbl3 = "Max";
    chartData3 = jsonData.max;

    dataLbl4 = "Average";
    chartData4 = jsonData.average;
  }
  else if (jsonData.report == "PromMaxMinXSubregionXSexoDec") {
    dataLabels = jsonData.decade.map((decade, index) => `${decade} - ${jsonData.subregion[index]} - ${jsonData.sex[index]}`);

    dataLbl2 = "Min";
    chartData2 = jsonData.min;

    dataLbl3 = "Max";
    chartData3 = jsonData.max;

    dataLbl4 = "Average";
    chartData4 = jsonData.average;
  }
  else if (jsonData.report == "PromMaxMinXSubregionXSexo") {
    dataLabels = jsonData.year.map((year, index) => `${year} - ${jsonData.subregion[index]} - ${jsonData.sex[index]}`);

    dataLbl2 = "Min";
    chartData2 = jsonData.min;

    dataLbl3 = "Max";
    chartData3 = jsonData.max;

    dataLbl4 = "Average";
    chartData4 = jsonData.average;
  }

  var chart = new Chart(ctx, {
    // chart type
    type: "bar",

    // chart data
    data: {
      labels: dataLabels,
      datasets: [
        {
          label: dataLbl2,
          data: chartData2,
          backgroundColor: [
            "rgba(255, 159, 64, 1)",
          ],
          borderColor: [
            "rgba(255, 159, 64, 1)",
          ],
          borderWidth: 1,
        },
        {
          label: dataLbl3,
          data: chartData3,
          backgroundColor: [
          "rgba(255, 99, 132, 1)",
          ],
          borderColor: [
          "rgba(255, 99, 132, 1)",
          ],
          borderWidth: 1,
        },
        {
          label: dataLbl4,
          data: chartData4,
          backgroundColor: [
          "rgba(153, 102, 255, 1)",
          ],
          borderColor: [
          "rgba(153, 102, 255, 1)",
          ],
          borderWidth: 1,
        },
      ],
    },
  });
</script>
