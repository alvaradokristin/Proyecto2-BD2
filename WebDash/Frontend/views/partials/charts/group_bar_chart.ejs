<div class="my-3">
  <canvas id="group_bar_chart"></canvas>
</div>

<script>
  var ctx = document.getElementById("group_bar_chart").getContext("2d");
  var lab = "<%= labels %>".split(",");
  var chartData = "<%= chartData %>".split(",").map(Number);

  // chart data
  var data = {
    labels: lab,
    datasets: [
      {
        label: "Ventas 2022",
        data: chartData,
        backgroundColor: "rgba(255, 99, 132, 0.2)",
        borderColor: "rgba(255, 99, 132, 1)",
        borderWidth: 1,
      },
      {
        label: "Ventas 2023",
        data: chartData,
        backgroundColor: "rgba(54, 162, 235, 0.2)",
        borderColor: "rgba(54, 162, 235, 1)",
        borderWidth: 1,
      },
    ],
  };

  var options = {
    responsive: true,
    legend: {
      position: "top",
    },
  };

  // create the chart
  var myChart = new Chart(ctx, {
    type: "bar",
    data: data,
    options: options,
  });
</script>
